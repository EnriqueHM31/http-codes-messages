---
import type { HttpCode } from '../../../types';
import CardAnimada from '../../atomos/CardAnimada.astro';
import HeaderCodes from '../../codes-http/HeaderCodes.astro';
import NoResultsCodes from '../../codes-http/NoResultsCodes.astro';

const { data } = Astro.props as { data: HttpCode[] };

const PAGE_SIZE = 12;
---

<section class="max-w-8xl relative mx-auto flex min-h-screen flex-col items-center">
	<!-- HEADER -->
	<HeaderCodes />

	<!-- GRID -->
	<div id="codes-grid" class="mb-25 flex flex-wrap justify-center gap-x-20 gap-y-16 px-6">
		{
			data.slice(0, PAGE_SIZE).map(code => (
				<div class="http-card" data-code={code.code} data-status={code.status.toLowerCase()}>
					<CardAnimada
						description={code.description}
						image_cover={{
							imageCover: code.images?.[0]?.imageCover,
							alt: code.images?.[0]?.alt
						}}
						image_logo="https://res.cloudinary.com/dovznesem/image/upload/v1768586804/404__2_-removebg-preview_cgkkr5.png"
						image_character={{
							imageCharacter: code.images?.[1]?.imageCharacter,
							alt: code.images?.[1]?.alt
						}}
						link={`code/${code.code}`}
						code={code.code}
					/>
				</div>
			))
		}
	</div>

	<!-- SENTINEL -->
	<div id="scroll-sentinel" class="z-50 h-10"></div>

	<NoResultsCodes />
</section>

<!-- DATA SERIALIZADA -->
<script type="application/json" id="codes-data" set:html={JSON.stringify(data)} />

<script>
	import type { HttpCode } from '../../../types';

	document.addEventListener('astro:page-load', () => {
		const PAGE_SIZE = 12;

		const input = document.getElementById('search-input') as HTMLInputElement;
		const grid = document.getElementById('codes-grid') as HTMLDivElement;
		const sentinel = document.getElementById('scroll-sentinel') as HTMLDivElement;
		const noResults = document.getElementById('no-results') as HTMLDivElement;

		const rawData = document.getElementById('codes-data') as HTMLScriptElement;
		const data = JSON.parse(rawData.textContent);

		let currentIndex = PAGE_SIZE;
		let observer: IntersectionObserver;

		/* ---------------------------
	   LOAD MORE
	---------------------------- */
		const loadMore = () => {
			const nextItems = data.slice(currentIndex, currentIndex + PAGE_SIZE);

			nextItems.forEach((code: HttpCode) => {
				const card = document.createElement('div');
				card.className = 'http-card';
				card.dataset.code = String(code.code);
				card.dataset.status = code.status.toLowerCase();

				card.innerHTML = `
<a href="code/${code.code}">
	<article class="card">
		<div class="wrapper">
			<div class="title z-10 bg-sky-700">
				<h2 class="absolute top-4 right-8 z-30 text-2xl font-bold">
					${code.code}
				</h2>
			</div>
			<img
				src="${code.images?.[0]?.imageCover ?? ''}"
				alt="${code.images?.[0]?.alt ?? ''}"
				class="cover-image"
			/>
		</div>

		<img
			src="https://res.cloudinary.com/dovznesem/image/upload/v1768586804/404__2_-removebg-preview_cgkkr5.png"
			alt="Imagen que dice la palabra Code"
			class="logo"
		/>

		<div class="container-character relative h-30 w-60 overflow-hidden">
			<img
				src="${code.images?.[1]?.imageCharacter ?? ''}"
				alt="${code.images?.[1]?.alt ?? ''}"
				class="character"
			/>
		</div>
	</article>
</a>
			`;

				grid.appendChild(card);
			});

			currentIndex += PAGE_SIZE;

			if (currentIndex >= data.length) {
				observer.disconnect();
				sentinel.remove();
			}
		};

		/* ---------------------------
	   OBSERVER (FIXED)
	---------------------------- */
		const initObserver = () => {
			if (observer) observer.disconnect();

			observer = new IntersectionObserver(entries => {
				if (!entries[0].isIntersecting) return;
				loadMore();
			});

			observer.observe(sentinel);

			// ðŸ”¥ FIX CLAVE: si ya estÃ¡ visible al volver
			requestAnimationFrame(() => {
				const rect = sentinel.getBoundingClientRect();
				if (rect.top < window.innerHeight) {
					loadMore();
				}
			});
		};

		initObserver();

		/* ---------------------------
	   RE-INIT AL VOLVER DE OTRA PÃGINA
	---------------------------- */
		window.addEventListener('pageshow', () => {
			initObserver();
		});

		window.addEventListener('resize', () => {
			initObserver();
		});

		/* ---------------------------
	   SEARCH
	---------------------------- */
		if (input) {
			input.addEventListener('input', e => {
				e.preventDefault();
				const value = input.value.toLowerCase();
				let visible = 0;

				if (observer) observer.disconnect();

				const cards = document.querySelectorAll('.http-card') as NodeListOf<HTMLDivElement>;

				cards.forEach(card => {
					const code = card.dataset.code as string;
					const status = card.dataset.status as string;

					if (!value) {
						card.classList.remove('hidden');
						visible++;
						return;
					}

					if (code.includes(value) || status.includes(value)) {
						card.classList.remove('hidden');
						visible++;
					} else {
						card.classList.add('hidden');
					}
				});

				if (!value && currentIndex < data.length) {
					initObserver();
				}

				if (visible === 0) {
					noResults.classList.remove('hidden');
				} else {
					noResults.classList.add('hidden');
				}
			});
		}
	});
</script>
