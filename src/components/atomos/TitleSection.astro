---
import type { TitleSectionProps } from '../../types/components';
const { text, align = 'center', color, size, delay = 'animate-delay-0' } = Astro.props as TitleSectionProps;
---

<h2 class={`section-title ${color} ${size} ${align === 'left' ? 'text-left' : align === 'right' ? 'text-right' : 'text-center'} animate-fade-in-up ${delay} `}>
	{text}
</h2>

<style>
	.section-title {
		font-weight: 800;
		letter-spacing: 1.9px;
		text-shadow:
			0 0 10px rgba(0, 0, 0, 1),
			0 0 8px rgba(0, 60, 60, 0.8),
			0 0 16px rgba(0, 120, 120, 0.7),
			0 0 32px rgba(0, 200, 200, 0.6);
	}
</style>
