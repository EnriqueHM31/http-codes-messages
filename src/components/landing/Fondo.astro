---
import '../../styles/fondoAnimado.css';
---

<main class="relative z-50 min-h-screen w-full overflow-hidden bg-black text-white">
	<!-- Grid background -->
	<div class="grid-bg absolute inset-0 -z-100"></div>

	<!-- Animated flow -->
	<div class="flow-bg absolute inset-0 -z-100"></div>

	<!-- Dark overlay -->
	<div class="absolute inset-0 -z-100 bg-black/60"></div>

	<div class="relative flex min-h-screen flex-col items-center justify-center">
		<slot />
	</div>
</main>
