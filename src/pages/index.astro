---
import CardAnimada from '../components/CardAnimada.astro';
import Hero from '../components/Hero.astro';
import TitleSection from '../components/TitleSection.astro';
import Layout from '../layouts/Layout.astro';
import { getHttpCodes } from '../services/httpCodes';
import '../styles/fondoAnimado.css';
import type { HttpCode } from '../types';

const data = (await getHttpCodes()) as HttpCode[];
---

<Layout>
	<Hero />
	<TitleSection text="Status Codes" align="center" size="text-6xl " />

	<section class="max-w-8xl relative mx-auto flex min-h-screen flex-col items-center justify-center">
		<div class="flex flex-wrap justify-center gap-x-40">
			{
				data.map(code => {
					return (
						<CardAnimada
							title={code.status}
							description={code.description}
							image_cover={{
								imageCover: code.images?.[0]?.imageCover,
								alt: code.status
							}}
							image_logo={'https://res.cloudinary.com/dovznesem/image/upload/v1768586804/404__2_-removebg-preview_cgkkr5.png'}
							image_character={{
								imageCharacter: code.images?.[1]?.imageCharacter,
								alt: code.status
							}}
							link={`code/${code.code}`}
						/>
					);
				})
			}
		</div>
	</section>
</Layout>
