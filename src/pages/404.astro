---
import TitleSection from '../components/atomos/TitleSection.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Error 404" descripcion="Pagina para mostrar el error 404">
	<section class="relative z-50 min-h-screen overflow-hidden text-white">
		<!-- Content -->
		<div class="relative z-50 flex min-h-screen flex-col items-center justify-center gap-10 px-6 text-center">
			<span class="inline-block rounded-full border border-sky-400/30 bg-sky-400/10 px-4 py-1 text-sm text-sky-300"> HTTP ERROR </span>

			<TitleSection text="404 Not Found" align="center" color="white" size="text-9xl" />

			<p class="max-w-xl text-2xl text-gray-300">La p√°gina que buscas no existe.</p>
			<a
				href="/"
				class="z-50 mt-3 flex items-center justify-center gap-3 rounded-lg border border-white/10 bg-cyan-800/80 px-4 py-2 text-xl font-bold text-white transition-all hover:border-cyan-600/40 hover:bg-sky-400/25"
			>
				Volver al inicio
			</a>
		</div>
	</section>
</Layout>
